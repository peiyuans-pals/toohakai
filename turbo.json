{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["PORT"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "dotEnv": ["apps/web/.env", "apps/server/.env"],
      "env": [
        // apps/web/.env
        "NODE_ENV",
        "NEXT_PUBLIC_TOOHAKAI_API_URL",
        "NEXT_PUBLIC_SUPABASE_URL",
        // apps/server/.env
        "SUPABASE_URL",
        "SUPABASE_KEY"
      ]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": [],
      "dotEnv": ["apps/web/.env", "apps/server/.env"],
      "env": [
        // apps/web/.env
        "NODE_ENV",
        "NEXT_PUBLIC_TOOHAKAI_API_URL",
        "NEXT_PUBLIC_SUPABASE_URL",
        // apps/server/.env
        "SUPABASE_URL",
        "SUPABASE_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
